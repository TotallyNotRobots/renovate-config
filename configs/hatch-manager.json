{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "poetry": {
        "enabled": false
    },
    "pip_requirements": {
        "enabled": false
    },
    "customManagers": [
        {
            "customType": "jsonata",
            "fileFormat": "yaml",
            "managerFilePatterns": [
                "/^\\.github\\/workflows/.*\\.ya?ml$/"
            ],
            "matchStrings": [
                "env.{\"currentValue\": HATCH_VERSION}"
            ],
            "depNameTemplate": "hatch",
            "packageNameTemplate": "https://github.com/pypa/hatch",
            "datasourceTemplate": "git-refs"
        }
    ]
}
