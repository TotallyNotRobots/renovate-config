{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "poetry": {
        "enabled": false
    },
    "pip_requirements": {
        "enabled": false
    },
    "customManagers": [
        {
            "customType": "jsonata",
            "fileFormat": "yaml",
            "managerFilePatterns": [
                "/^\\.github\\/workflows\\/.*\\.ya?ml$/"
            ],
            "matchStrings": [
                "env.{\"currentValue\": HATCH_VERSION}"
            ],
            "depNameTemplate": "pypa/hatch",
            "extractVersionTemplate": "^hatch-v?(?<version>\\d+.*)$",
            "datasourceTemplate": "github-releases"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$/",
                "/(^|/)action\\.ya?ml$/"
            ],
            "matchStrings": [
                "/^\\s+-?\\s+?uses\\s*: (?<replaceString>['\"]?(?<depName>(?<registryUrl>https:\\/\\/[.\\w-]+\\/)?(?<packageName>[\\w-]+\\/[.\\w-]+))(?<path>\\/.*)?@(?<currentValue>[^\\s'\"]+)['\"]?(?:(?<commentWhiteSpaces>\\s+)#\\s*(((?:renovate\\s*:\\s*)?(?:pin\\s+|tag\\s*=\\s*)?|(?:ratchet:[\\w-]+\\/[.\\w-]+)?)@?(?<tag>([\\w-]*[-/])?v?\\d+(?:\\.\\d+(?:\\.\\d+)?)?)|(?:ratchet:exclude)))?)/"
            ],
            "datasourceTemplate": "git-refs",
            "currentValueTemplate": "{{#if tag}}{{{tag}}}{{else}}{{{currentValue}}}{{/if}}"
        }
    ]
}
