{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "poetry": {
        "enabled": false
    },
    "pip_requirements": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchManagers": ["/^github-actions$/"],
            "matchPackageNames": ["/^pypa\\/hatch$/"],
            "overridePackageName": "https://github.com/pypa/hatch",
            "overrideDepName": "pypa/hatch",
            "overrideDatasource": "git-refs",
            "replacementVersion": "install"
        }
    ],
    "customManagers": [
        {
            "customType": "jsonata",
            "fileFormat": "yaml",
            "managerFilePatterns": [
                "/^\\.github\\/workflows\\/.*\\.ya?ml$/"
            ],
            "matchStrings": [
                "env.{\"currentValue\": HATCH_VERSION}"
            ],
            "depNameTemplate": "pypa/hatch",
            "extractVersionTemplate": "^hatch-v?(?<version>\\d+.*)$",
            "datasourceTemplate": "github-releases"
        }
    ]
}
