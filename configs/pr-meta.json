{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":label(renovate)",
        ":assignAndReview(linuxdaemon)",
        ":configMigration"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "type/major"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "labels": [
                "type/minor"
            ]
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "labels": [
                "type/patch"
            ]
        },
        {
            "matchUpdateTypes": [
                "digest",
                "pin"
            ],
            "labels": [
                "type/digest"
            ]
        },
        {
            "matchUpdateTypes": [
                "pin"
            ],
            "labels": [
                "type/pin"
            ]
        },
        {
            "matchUpdateTypes": [
                "lockFileMaintenance"
            ],
            "labels": [
                "type/lockfile"
            ]
        },
        {
            "matchDatasources": [
                "github-releases",
                "github-tags"
            ],
            "addLabels": [
                "renovate/github-release"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "addLabels": [
                "renovate/github-action"
            ]
        },
        {
            "matchManagers": [
                "helmv3"
            ],
            "addLabels": [
                "renovate/helm"
            ]
        }
    ],
    "additionalBranchPrefix": "{{manager}}/",
    "prConcurrentLimit": 10,
    "prHourlyLimit": 0,
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
    "suppressNotifications": [
        "prEditedNotification",
        "prIgnoreNotification"
    ],
    "automergeType": "pr",
    "semanticCommits": "enabled"
}
